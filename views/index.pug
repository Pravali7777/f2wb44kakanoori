extends layout

block content
  h1= title
  p Dogs can sniff at the same time as breathing.
  body
  button(type="button", class="btn btn-secondary" onclick="doBump()") Press Me
  div#bump Bump the count

  script.  
    var count = 0
    var bump = 1
    function doBump() {
      count = count + bump 
      bump = bump + 1
      document.getElementById("bump").innerHTML = "Count "+ count +" Bump "+bump;
    }
  